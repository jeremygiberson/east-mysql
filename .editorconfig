# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.js]
quote_type = 'double'

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[.jscsrc]
indent_size = 2

[.travis.yml]
insert_final_newline = false
